{
	"compilerOptions": {
		"paths": {
			"_core/*": [
				"./src/_core/*"
			],
			"_shared/*": [
				"./src/_shared/*"
			],
			"pages/*": [
				"./src/pages/*"
			],
			"contexts/*": [
				"./src/contexts/*"
			],
			"contexts/*": [
				"./src/assets/*"
			],
			"__mocks__/*": [
				"./src/__mocks__/*"
			],
			"__test-utils__/*": [
				"./src/__test-utils__/*"
			]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react"
	},
	"include": [
		"./src"
	]
}
